<%= form_for(@machine) do |f| %>
  <% if @machine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@machine.errors.count, "error") %> prohibited this machine from being saved:</h2>

      <ul>
      <% @machine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :ipaddr %><br />
    <%= f.text_field :ipaddr %>
  </div>
  <div class="field">
    <%= f.label :fqdn %><br />
    <%= f.text_field :fqdn %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>
  <div class="field">
    <%= f.label :old_ipaddr %><br />
    <%= f.text_field :old_ipaddr %>
  </div>
  <div class="field">
    <%= f.label :user %><br />
    <%= f.select :user_id, User.all.collect{|u| [u.name, u.id]} %>
  </div>
  <div class="field">
    <%= f.label :department %><br />
    <%= f.select :department_id, Department.all.collect{|d| [d.name, d.id]} %>
  </div>
  <div class="field">
    <%= f.label :place %><br />
    <%= f.select :place_id, Place.all.collect{|p| [p.name, p.id]} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
